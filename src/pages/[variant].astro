---
import BaseLayout from "../layouts/Layout.astro";
import HeroSection from "../components/home/HeroSection.astro";
import ProcessSection from "../components/home/ProcessSection.astro";
import CTA from "../components/home/CTA.astro";
import Testimonials from "../components/home/Testimonials.astro";
import WhyChooseUs from "../components/home/WhyChooseUs.astro";
import ConsiderstionBespoke from "../components/home/ConsideringBespoke.astro";
import { homeVariants } from "../content/homeVariants";

const slug = Astro.params.variant;
const copy = slug ? homeVariants[slug] : null;

if (!copy) {
  return Astro.redirect("/404");
}
---

<BaseLayout title={copy.meta.title} description={copy.meta.description}>
   <HeroSection content={copy.hero} />
   <ProcessSection content={copy.process} /> 
   <WhyChooseUs content={copy.why}/> 
   <ConsiderstionBespoke content={copy.bespoke}/>
   <Testimonials content={copy.testimonials}/> 
   <CTA content={copy.cta}/> 
</BaseLayout>
