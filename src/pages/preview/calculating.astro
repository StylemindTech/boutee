---
import Layout from "../../layouts/Layout.astro";
import SwipeExperience from "../../components/preview/SwipeExperience";
---

<Layout title="Boutee Preview - Calculating" description="Preview the calculating overlay without redirect.">
  <section class="preview-shell">
    <SwipeExperience client:load disableAutoRedirect forceRedirectOverlay showRedirectOverlay />
  </section>
</Layout>

<style>
  .preview-shell {
    min-height: calc(100vh - 0px);
    width: 100%;
  }

  :global(nav),
  :global(footer) {
    display: none;
  }

  :global(body) {
    background: #ffffff;
  }

  :global(main) {
    padding: 0;
  }
</style>
