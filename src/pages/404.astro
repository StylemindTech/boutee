---
import BaseLayout from "../layouts/Layout.astro";
---
<BaseLayout title="Boutee - Page not found">

  <section class="lg:py-[112px] py-[48px] flex items-center min-h-[50vh]">
    <div class="max-w-screen-2xl lg:px-20 px-[24px] mx-auto flex flex-col items-center text-center gap-6">
      <img
        src="/boutee-404.png"
        alt="404 page not found illustration"
        loading="lazy"
        class="w-full max-w-[360px] md:max-w-[440px] rounded-[24px] shadow-[0_32px_72px_-28px_rgba(16,24,40,0.18)]"
      />
      <h1 class="text-3xl sm:text-4xl font-semibold text-textPrimary font-figtree">
        Page not found
      </h1>
      <p class="text-base sm:text-lg text-textSecondary font-figtree max-w-2xl">
        Sorry, the page you're looking for doesn't exist or may have been moved.
      </p>

      <div class="w-full flex justify-center">
        <a
          href="/"
          class="spinBtn cursor-pointer bg-btnPrimary btn-after text-white text-body-mobile leading-body-mobile py-button-padding-y inline-flex min-h-[56px] min-w-[212px] px-button-padding-x-desktop rounded-full font-figtree font-medium items-center justify-center transition duration-300 ease-in-out"
        >
          Back To Home
        </a>
      </div>
    </div>
  </section>

</BaseLayout>
