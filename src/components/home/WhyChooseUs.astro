---
import { Image } from "astro:assets";
import btnIcon from "../../assets/icons/btn-icon.svg";
import type { WhyCopy } from "../../content/homeVariants";

const { content }: { content: WhyCopy } = Astro.props;
---

<section class="py-section-padding-mobile lg:py-section-padding-desktop">
  <div class="max-w-container-max-width px-container-padding-mobile lg:px-container-padding-desktop mx-auto">
    <div class="grid md:grid-cols-2 md:gap-[82px] gap-text-gap-medium items-start">
      <div class="flex flex-col">
        <h2 class="lg:text-heading-desktop text-center md:text-start text-heading-mobile md:font-black font-normal font-ppradio lg:mb-6 mb-6 lg:leading-heading-desktop leading-heading-mobile">
          {content.heading}
        </h2>
        <p class="font-figtree lg:text-body-desktop text-body-mobile lg:leading-large-mobile leading-body-mobile text-textPrimary lg:pr-14 text-center md:text-left mb-0 md:mb-12">
           {content.body}
        </p>

        <div class="md:block hidden">
          <a href={content.ctaHref} class="spinBtn cursor-pointer bg-btnPrimary btn-after text-white text-body-mobile leading-body-mobile py-button-padding-y inline-flex md:min-h-[56px] min-h-[48px] min-w-[212px] px-button-padding-x-desktop rounded-full font-figtree font-medium items-center gap-3">
            <Image src={btnIcon} class="btnIcon w-5 h-5 transition-transform duration-500" alt="image" />
            {content.ctaLabel}
          </a>
        </div>
      </div>

      <div class="flex flex-col">
        <div class="rounded-xl p-[2px] pt-[8px] bg-brand-2 hover:p-[3px] hover:pt-[10px] hover:scale-x-[101%] transition-all duration-300 overflow-hidden">
          <div class="py-container-padding-mobile px-text-gap-small rounded-xl bg-white">
            <p class="font-figtree lg:text-body-desktop text-body-mobile lg:leading-large-mobile leading-body-mobile text-textPrimary lg:pr-14">
              <span set:html={content.cardOne} />
            </p>
          </div>
        </div>

        <div class="rounded-xl p-[2px] pt-[8px] bg-brand-1 mt-[-10px] hover:p-[3px] hover:pt-[10px] z-10 hover:scale-x-[101%] transition-all duration-300 overflow-hidden">
          <div class="py-container-padding-mobile px-text-gap-small rounded-xl bg-white">
            <p class="font-figtree lg:text-body-desktop text-body-mobile lg:leading-large-mobile leading-body-mobile text-textPrimary">
              <span set:html={content.cardTwo} />
            </p>
          </div>
        </div>

        <div class="rounded-xl p-[2px] pt-[8px] bg-brand-3 mt-[-10px] hover:p-[3px] hover:pt-[10px] z-20 hover:scale-x-[101%] transition-all duration-300 overflow-hidden">
          <div class="py-container-padding-mobile px-text-gap-small rounded-xl bg-white">
            <p class="font-figtree lg:text-body-desktop text-body-mobile lg:leading-large-mobile leading-body-mobile text-textPrimary">
              <span set:html={content.cardThree} />
            </p>
          </div>
        </div>
      </div>
      <a href={content.ctaHref} class="spinBtn cursor-pointer bg-btnPrimary md:hidden btn-after text-white text-body-mobile leading-body-mobile py-button-padding-y mx-auto md:ml-0 w-full min-h-[56px] justify-center px-button-padding-x-desktop rounded-full font-figtree font-medium flex items-center gap-3">
        <Image src={btnIcon} class="btnIcon w-5 h-5 transition-transform duration-500" alt="image" />
        {content.ctaLabel}
      </a>
    </div>
  </div>
</section>
