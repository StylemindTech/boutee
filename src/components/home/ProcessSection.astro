---
import { Image } from "astro:assets";
import cardImg from "../../assets/Image/card-img1.png";
import cardImg1 from "../../assets/Image/card-img2.png";
import cardImg2 from "../../assets/Image/card-img3.png";
import type { ProcessCopy } from "../../content/homeVariants";

const { content }: { content: ProcessCopy } = Astro.props;
---

<section class="py-section-padding-mobile lg:py-section-padding-desktop">
  <div class="max-w-container-max-width px-container-padding-mobile lg:px-container-padding-desktop mx-auto overflow-hidden">
    <h2 data-aos="fade-up" class="lg:text-heading-desktop text-heading-mobile font-ppradio leading-heading-mobile lg:font-black font-normal text-center lg:leading-heading-desktop text-textPrimary lg:mb-grid-gap-desktop mb-component-gap-medium animate-fade-in-up">
      <span set:html={content.heading} />
    </h2>

    <div class="grid md:grid-cols-3 lg:gap-component-gap-medium gap-m">
      <div class="bg-cardColor rounded-xxxl flex flex-col items-center text-center">
        <div class="w-full lg:min-h-[400px] min-h-[237px] lg:max-h-[400px] max-h-[327px] overflow-hidden">
          <Image src={cardImg} alt="card img" format="webp" class="w-full h-full object-cover" />
        </div>
        <div class="lg:p-container-padding-mobile py-text-gap-small px-container-padding-mobile">
          <h3 class="lg:text-large-desktop text-body-desktop font-bold font-figtree lg:leading-large-desktop leading-large-mobile mb-s text-textPrimary">
            {content.steps[0]?.title}
          </h3>
          <p class="text-textPrimary font-figtree lg:text-body-desktop text-body-mobile lg:leading-large-mobile leading-body-mobile">
            {content.steps[0]?.description}
          </p>
        </div>
      </div>
      <div class="bg-cardColor rounded-xxxl flex flex-col items-center text-center">
        <div class="w-full lg:min-h-[400px] min-h-[237px] lg:max-h-[400px] max-h-[327px] overflow-hidden">
          <Image src={cardImg1} alt="card img" format="webp" class="w-full h-full object-cover" />
        </div>
        <div class="lg:p-container-padding-mobile py-text-gap-small px-container-padding-mobile">
          <h3 class="lg:text-large-desktop text-body-desktop font-bold font-figtree lg:leading-large-desktop leading-large-mobile mb-s text-textPrimary">
            {content.steps[1]?.title}
          </h3>
          <p class="text-textPrimary font-figtree lg:text-body-desktop text-body-mobile lg:leading-large-mobile leading-body-mobile">
            {content.steps[1]?.description}
          </p>
        </div>
      </div>
      <div class="bg-cardColor rounded-xxxl flex flex-col items-center text-center">
        <div class="w-full lg:min-h-[400px] min-h-[237px] lg:max-h-[400px] max-h-[327px] overflow-hidden">
          <Image src={cardImg2} alt="card img" format="webp" class="w-full h-full object-cover" />
        </div>
        <div class="lg:p-container-padding-mobile py-text-gap-small px-container-padding-mobile">
          <h3 class="lg:text-large-desktop text-body-desktop font-bold font-figtree lg:leading-large-desktop leading-large-mobile mb-s text-textPrimary">
            {content.steps[2]?.title}
          </h3>
          <p class="text-textPrimary font-figtree lg:text-body-desktop text-body-mobile lg:leading-large-mobile leading-body-mobile">
            {content.steps[2]?.description}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
