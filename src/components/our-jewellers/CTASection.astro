import Button from "../ButtonFind.astro";
---

<section class="lg:py-[112px] py-[48px]">
  <div
    class="max-w-screen-2xl lg:px-20 px-[24px] mx-auto"
  >
  <div class="text-center bg-cardColor rounded-[48px] lg:px-[150px] lg:py-[88px] py-[48px] px-[24px] ">
      <h3
      class="lg:text-[52px] text-center mb-[24px] text-[32px] md:text-[28px] leading-[36px] lg:leading-[56px] lg:font-black font-normal text-textPrimary font-figtree"
    >
   Ready to find your perfect jeweller?
    </h3>
    <p
      class="lg:text-[18px] text-center mb-[48px] text-[16px] md:text-[18px] leading-[20px] lg:leading-[22px] max-w-[880px] mx-auto font-normal text-textPrimary font-figtree"
