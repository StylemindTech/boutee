---
import { Image } from "astro:assets";
import contact from "../../assets/icons/contacts-icons.svg";
import diamond from "../../assets/icons/daimond-contact.svg";
---

<section class="lg:py-[112px] py-[48px]">
  <div class="max-w-screen-2xl lg:px-20 px-[24px] mx-auto">
    <!-- Heading -->
    <div class="overflow-hidden">
      <h2
        data-aos="fade-up"
        class="lg:text-[52px] text-[32px] lg:leading-[56px] leading-[36px] font-black text-center font-figtree md:mb-[16px] mb-[20px]"
      >
        Contact us
      </h2>
      <p
        class="font-figtree lg:text-[18px] text-[16px] text-center lg:leading-[22px] leading-[20px] text-textSecondary"
      >
        Have questions or ideas? Weâ€™d love to hear from you
      </p>
    </div>

    <!-- Cards -->
    <div
      class="grid md:grid-cols-2 lg:gap-[40px] gap-[20px] lg:mt-[80px] mt-[24px] w-full"
    >
      <!-- Card 1 -->
      <div class="bg-cardColor rounded-[40px] p-8 lg:py-10 lg:px-12">
        <div
          class="w-[64px] h-[64px] flex items-center justify-center bg-[linear-gradient(76deg,#B9F551_22.87%,#D7F650_74.01%)] rounded-[20px] mb-[24px]"
        >
          <Image src={contact} alt="icon" class="w-[32px] h-[32px]" />
        </div>
        <h3
          class="lg:text-[32px] text-[22px] lg:leading-[36px] leading-[26px] font-black mb-[12px] text-textPrimary font-figtree"
        >
          For user support <br /> and general inquiries
        </h3>
        <p
          class="lg:text-[18px] text-[16px] lg:leading-[22px] leading-[20px] text-textPrimary font-figtree font-normal"
        >
          info@boutee.co.uk
        </p>
      </div>

      <!-- Card 2 -->
      <div class="bg-cardColor rounded-[40px] p-8 lg:py-10 lg:px-12">
        <div
          class="w-[64px] h-[64px] flex items-center justify-center bg-[linear-gradient(76deg,#B9F551_22.87%,#D7F650_74.01%)] rounded-[20px] mb-[24px]"
        >
          <Image src={diamond} alt="icon" class="w-[32px] h-[32px]" />
        </div>
        <h3
          class="lg:text-[32px] text-[22px] lg:leading-[36px] leading-[26px] font-black mb-[12px] text-textPrimary font-figtree"
        >
          To become <br /> a Boutee designer
        </h3>
        <p
          class="lg:text-[18px] text-[16px] lg:leading-[22px] leading-[20px] text-textPrimary font-figtree font-normal"
        >
          ethan@boutee.co.uk
        </p>
      </div>
    </div>
  </div>
</section>
