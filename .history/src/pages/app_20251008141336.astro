---
const appUrl = 'https://app.boutee.co.uk';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Loading Boutee...</title>
  
  <!-- IMPROVED Mobile Detection - Runs IMMEDIATELY -->
  <script>
    (function() {
      const isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);
      const isSmallScreen = window.innerWidth <= 768;
      
      if (isMobile || isSmallScreen) {
        window.location.replace('https://app.boutee.co.uk');
      }
    })();
  </script>
  
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Radio+Grotesk:wght@400;500;600;700&display=swap');
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
      background: #ffffff;
      font-family: system-ui, -apple-system, sans-serif;
      color: #000000;
    }
    
    .container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      max-width: 900px;
      width: 100%;
      align-items: center;
    }
    
    h1 {
      font-family: 'Radio Grotesk', sans-serif;
      font-size: 3rem;
      font-weight: 600;
      line-height: 1.1;
      margin-bottom: 1.5rem;
      color: #000000;
    }
    
    p {
      font-size: 1.125rem;
      line-height: 1.6;
      color: #404040;
    }
    
    .left-column {
      padding-right: 2rem;
    }
    
    .right-column {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
    }
    
    .qr-label {
      font-size: 0.875rem;
      text-align: center;
      color: #737373;
    }
    
    #qrcode {
      display: flex;
      justify-content: center;
      padding: 1.5rem;
      background: #fafafa;
      border-radius: 1rem;
    }
    
    /* Responsive */
    @media (max-width: 768px) {
      .container {
        grid-template-columns: 1fr;
        gap: 3rem;
        text-align: center;
      }
      
      .left-column {
        padding-right: 0;
      }
      
      h1 {
        font-size: 2.5rem;
      }
    }
  </style>
</head>

<body>
  
  <div class="container">
    
    <!-- Left Column -->
    <div class="left-column">
      <h1>Better on Mobile</h1>
      <p>
        Boutee is only available on mobile. Scan the QR code to continue your journey and start discovering!
      </p>
    </div>
    
    <!-- Right Column -->
    <div class="right-column">
      <p class="qr-label">Scan this code with your mobile camera:</p>
      <div id="qrcode"></div>
    </div>
    
  </div>
  
  <!-- QR Code Library -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
  
  <!-- Generate QR Code -->
  <script>
    new QRCode(document.getElementById("qrcode"), {
      text: 'https://app.boutee.co.uk',
      width: 240,
      height: 240,
      colorDark: "#000000",
      colorLight: "#ffffff",
      correctLevel: QRCode.CorrectLevel.H
    });
  </script>
  
</body>
</html>