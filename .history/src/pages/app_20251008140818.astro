---
const appUrl = 'https://app.boutee.co.uk';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Loading Boutee...</title>
  
  <!-- Import Tailwind -->
  <link rel="stylesheet" href="/src/styles/global.css">
  <!-- Or if you have a different path to your Tailwind CSS, adjust above -->
  
  <!-- IMPROVED Mobile Detection - Runs IMMEDIATELY -->
  <script>
    (function() {
      const isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);
      const isSmallScreen = window.innerWidth <= 768;
      
      if (isMobile || isSmallScreen) {
        window.location.replace('https://app.boutee.co.uk');
      }
    })();
  </script>
  
  <style>
    /* Fallback styles in case Tailwind doesn't load */
    body {
      margin: 0;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem;
      background: linear-gradient(to bottom right, #fdf2f8, #ffffff, #faf5ff);
      font-family: system-ui, -apple-system, sans-serif;
    }
    .container {
      max-width: 28rem;
      width: 100%;
      text-align: center;
    }
    .qr-box {
      background: white;
      border-radius: 1rem;
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
      padding: 2rem;
      margin-bottom: 1.5rem;
    }
    #qrcode {
      display: flex;
      justify-content: center;
    }
    h1 {
      font-size: 1.875rem;
      font-weight: bold;
      color: #111827;
      margin-bottom: 0.5rem;
    }
    .url-box {
      background: white;
      border-radius: 0.5rem;
      padding: 1rem;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }
    code {
      color: #ec4899;
      font-size: 1.125rem;
      font-weight: 600;
      font-family: monospace;
    }
  </style>
</head>

<body>
  
  <div class="container">
    
    <!-- Header -->
    <div style="margin-bottom: 2rem;">
      <div style="font-size: 3.75rem; margin-bottom: 1rem;">ðŸ“±</div>
      <h1>Mobile App Required</h1>
      <p style="color: #4b5563;">Boutee works best on your mobile device</p>
    </div>
    
    <!-- QR Code Container -->
    <div class="qr-box">
      <div id="qrcode"></div>
    </div>
    
    <!-- Instructions -->
    <div>
      <p style="font-size: 1.125rem; font-weight: 600; color: #1f2937; margin-bottom: 1rem;">
        ðŸ“¸ Scan with your phone's camera
      </p>
      
      <div class="url-box">
        <p style="font-size: 0.875rem; color: #4b5563; margin-bottom: 0.5rem;">
          Or visit this URL on your mobile:
        </p>
        <code>app.boutee.co.uk</code>
      </div>
    </div>
    
  </div>
  
  <!-- QR Code Library -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
  
  <!-- Generate QR Code -->
  <script>
    new QRCode(document.getElementById("qrcode"), {
      text: 'https://app.boutee.co.uk',
      width: 256,
      height: 256,
      colorDark: "#000000",
      colorLight: "#ffffff",
      correctLevel: QRCode.CorrectLevel.H
    });
  </script>
  
</body>
</html>